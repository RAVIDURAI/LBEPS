                                                       5.Calculator operation

package timepass;

import java.util.Scanner;

public class Calllllc {
	Scanner n=new Scanner(System.in);
	


void add(){
	System.out.println("Enter the no 1:");
	int a=n.nextInt();
	System.out.println("Enter the no 2:");
	int b=n.nextInt();
	int c;
	c=a+b;
	System.out.println("addition of  no:              "+c);
	c=a-b;
	System.out.println("subraction of no:             "+c);
    c=a*b;
    System.out.println("multiply  of no:              "+c);
    c=a/b;
    System.out.println("div of no                     "+c );
    c=(a+b)/2;
    System.out.println("per of no                     "+c);
}

	public static void main(String[] args) {
Calllllc j=new Calllllc();
j.add();
	}

}



                                                        6. Reverse no print

package timepass;

public class Array {
	public static void main(String[] args) {
int a[]=new int[5];
a[0]=23;
a[1]=34;
a[2]=4;
a[3]=34;
a[4]=467;
for(int i=0;i<a.length;i++)
	System.out.print(a[i]);
for(int j=a.length-1;j>=0;j--)
	System.out.print(a[j]);
	
}
}



                                                        7.SALERY details and bonus add to salary

package timepass;

import java.util.Scanner;

public class Salary {
int amount=0;
	public static void main(String[] args) {
		for(int i=0;i<=2;i++){

Scanner g=new Scanner(System.in);
System.out.println("Enter the name:");
String  name=g.next();
System.out.println("Enter the  previous salary:");
int salary=g.nextInt();
if(salary==10000){
	 int  amount=(salary+3000);
	 System.out.println( "name:"+name        +" this month salary:"+amount);
}
else if(salary==50000){
	 int  amount=(salary+10000);
	 System.out.println( "name:"+name        +"this month salary:"+amount);
}
else if(salary==100000){
	 int  amount=(salary+10000);
	 System.out.println( "name:"+name        +"this month salary:"+amount);
}
else{
	System.out.println("process done");
}


	}

}
}
                                                 7.  Highest number for 3numbers
package timepass;

import java.util.Scanner;

public class Highest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	      int a, b, c;
	      System.out.println("Enter three integers ");
	      Scanner in = new Scanner(System.in);
	 
	      a = in.nextInt();
	      b = in.nextInt();
	      c = in.nextInt();
	 
	      if ( a> b && a > c)
	         System.out.println("First number is largest."+a);
	      else if ( b > a && b> c )
	         System.out.println("Second number is largest."+b);
	      else if ( c > a && c > b )
	         System.out.println("Third number is largest."+c);
	      else   
	         System.out.println("Entered numbers are not ");

	}

}

                                                          8.string to convert char 3rd charactor s or not
package timepass;

import java.util.Scanner;

public class Stri {
	public static void main(String args[]){  
		 Scanner in =new Scanner(System.in); 
		 System.out.println("enter the string");
		String str =in.next();
		
		
		char[] chars = str.toCharArray();
		
		if(chars[2] == 's'){
			System.out.println("success");
		} else{
			System.out.println("Fail");
		}
		
	}

}
